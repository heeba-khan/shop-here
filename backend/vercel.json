
  {
    "version": 2,
    "builds": [
      {
        "src": "shop-here/backend/api/app.js",    
        "use": "@vercel/node"            
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",              
        "dest": "shop-here/backend/api/app.js"    
      },
      {
        "src": "/(.*)",                     
        "dest": "shop-here/backend/api/app.js"   
      }
    ]
  }
  